@{
    ViewData["Title"] = "Resumo";
}

@model Produto

<br />
<br />
<h3>Resumo do Cadastro</h3>

<h4>Confira os dados do projeto cadastrado</h4>

<div class="panel panel-default">
    <div class="panel-body">
        <hr />
        <div class="row">
            <div class="col-md-8">
                <h3>Dados do Projeto</h3>
                <div>Nome: @(Model.Nome)</div>
                <div>Descrição: @(Model.Descricao)</div>
                <div>Categoria: @(Model.Categoria)</div>
            </div>
            <div class="col-md-4">
                <h3>Curso</h3>
                <div>@(Model.Curso)</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <h3>Proprietário</h3>
                <div>@(Model.Usuario.NomeCompleto)</div>
            </div>
            <div class="col-md-4">
                <h3>Requisitos</h3>
                <div>@(Model.Requisitos)</div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a id="RemoveButton"
               class="btn btn-danger">
                Remover Projeto
            </a>

            <a asp-controller="Produto"
               asp-action="Editar"
               asp-route-produtoId="@(Model.Id)"
               class="btn btn-default">
                Editar Projeto
            </a>

            <a id="ConfirmButton"
                class="btn btn-success">
                Confirmar
            </a>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
@Html.Partial("~/Views/Modals/CadastroProduto.cshtml")

<script>
    $("#ConfirmButton").click(function () {
        $($('#ConfirmarProdutoCadastro').modal('show'))
    });

    $("#RemoveButton").click(function () {
        $($('#RemoverProdutoCadastro').modal('show'))
    });
</script>